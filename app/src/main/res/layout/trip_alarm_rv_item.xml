<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_alarm_rv_item_contents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:id="@+id/trip_alarm_rv_item_infoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trip_alarm_rv_item_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소이름 : "
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/trip_alarm_rv_item_arrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착시간 :  "
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/trip_alarm_rv_item_placeName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/trip_alarm_rv_item_placeName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:id="@+id/trip_alarm_rv_item_weatherIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/trip_alarm_rv_item_timeIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trip_alarm_rv_item_detail"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/colorGray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:text="날씨정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_temperauterInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도 : "/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_HumidityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="습도 : "/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_rainfallProbablityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강수확률 : "/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_rainfallInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강수량 : "/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="시간정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_LT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동소요시간 : "/>
            <TextView
                android:id="@+id/trip_alarm_rv_item_ETA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착예정시간 : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보1 : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보2 : "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp">
            <Button
                android:id="@+id/trip_alarm_rv_item_visitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A"/>

            <Button
                android:id="@+id/trip_alarm_rv_item_changeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C"/>

            <Button
                android:id="@+id/trip_alarm_rv_item_testButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="T"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>