<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/home_route_rv_showRouteBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_route_rv_start"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="최초 출발지"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/home_route_rv_goal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="마지막 여행지"/>
    </LinearLayout>

    <Button
        android:id="@+id/home_route_rv_button"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/home_route_rv_showRouteBoard"
        app:layout_constraintTop_toBottomOf="@id/home_route_rv_showRouteBoard"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>