<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_border">



    <ImageView
        android:id="@+id/spotImage2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spotName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="여행지12345678910"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spotImage2"
        app:layout_constraintStart_toEndOf="@id/spotImage2"
        app:layout_constraintTop_toTopOf="@id/spotImage2" />
    <TextView
        android:id="@+id/viewArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="00:00"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDeparture"
        app:layout_constraintEnd_toStartOf="@+id/viewDeparture"
        app:layout_constraintTop_toTopOf="@+id/viewDeparture"
        android:background="@drawable/item_border"/>
    <TextView
        android:id="@+id/viewDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="00:00"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/spotName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spotName2"
        android:background="@drawable/item_border"/>


</androidx.constraintlayout.widget.ConstraintLayout>