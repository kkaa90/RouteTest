<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/border_layout">

    <ImageView
        android:id="@+id/nImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_popup_reminder" />

    <TextView
        android:id="@+id/nTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="여행신청"
        app:layout_constraintStart_toEndOf="@+id/nImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nContentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="[XXXX] 게시글에\n 참가 신청이 있습니다."
        app:layout_constraintStart_toStartOf="@+id/nTypeView"
        app:layout_constraintTop_toBottomOf="@+id/nTypeView" />
</androidx.constraintlayout.widget.ConstraintLayout>